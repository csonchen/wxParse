
.wxParse{
  margin: 0 5px;
  font-family: Helvetica,sans-serif;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}
.wxParse-inline{
  display: inline;
  margin: 0;
  padding: 0;
  line-height: 1.75;
}
.mb10 {
  margin-bottom: 0.63em;
}
/*//标题 */
.wxParse-div { 
  /* margin: 0; */
  padding: 0; 
}
.wxParse-h1{ font-size:2em; margin: .67em 0 }
.wxParse-h2{ font-size:1.5em; margin: .75em 0 }
.wxParse-h3{ font-size:1.17em; margin: .83em 0 }
.wxParse-h4{ margin: 1.12em 0}
.wxParse-h5 { font-size:.83em; margin: 1.5em 0 }
.wxParse-h6{ font-size:.75em; margin: 1.67em 0 }

.wxParse-h1 {
  font-size: 18px;
  font-weight: 400;
  margin-bottom: .9em;
}
.wxParse-h2 {
  font-size: 16px;
  font-weight: 400;
  margin-bottom: .34em;
}
.wxParse-h3 {
  font-weight: 400;
  font-size: 15px;
  margin-bottom: .34em;
}
.wxParse-h4 {
  font-weight: 400;
  font-size: 14px;
  margin-bottom: .24em;
}
.wxParse-h5 {
  font-weight: 400;
  font-size: 13px;
  margin-bottom: .14em;
}
.wxParse-h6 {
  font-weight: 400;
  font-size: 12px;
  margin-bottom: .04em;
}

.wxParse-h1, .wxParse-h2, .wxParse-h3, .wxParse-h4, .wxParse-h5, .wxParse-h6, .wxParse-b, .wxParse-strong  { font-weight: bolder }

.wxParse-i,.wxParse-cite,.wxParse-em,.wxParse-var,.wxParse-address{font-style:italic}
.wxParse-pre,.wxParse-tt,.wxParse-code,.wxParse-kbd,.wxParse-samp{font-family:monospace}
.wxParse-pre {
  white-space: pre;
  overflow-x: scroll;
  background: #f5f5f5;
  /* padding: 20rpx; */
}
.wxParse-big{font-size:1.17em}
.wxParse-small,.wxParse-sub,.wxParse-sup{font-size:.83em}
.wxParse-sub{vertical-align:sub}
.wxParse-sup{vertical-align:super}
.wxParse-s,.wxParse-strike,.wxParse-del{text-decoration:line-through}
/*wxparse-自定义个性化的css样式*/
/*增加video的css样式*/
.wxParse-strong,.wxParse-s{display: inline}
.wxParse-a{
  color: deepskyblue;
  word-break:break-all;
  overflow:auto;
}
.wxParse-video{
  text-align: center;
  margin: 10px 0;
}
.wxParse-video-video{
  width:100%;
}
.wxParse-blockquote {
  padding:10px 0 10px 5px;
  font-family:Courier, Calibri,"宋体";
  background:#f5f5f5;
  border-left: 3px solid #dbdbdb;
}
.wxParse-code,.wxParse-wxxxcode-style{
  background:#f5f5f5;
  line-height: 1.75;
}
.wxParse-li,.wxParse-li-inner{
  align-items: baseline;
  margin: 10rpx 0;
}
.wxParse-li-text{
  align-items: center;
  line-height: 20px;
}
.wxParse-li-circle, .wxParse-ol-number {
  margin: 10rpx 10rpx 10rpx 0;
}
.wxParse-li-circle{
  display: inline-flex;
  width: 5px;
  height: 5px;
  margin-top: 34rpx!important;
  background-color: #333;
  border-radius: 50%;
}
.wxParse-li-square{
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  background-color: #333;
  margin-right: 5px;
}
.wxParse-li-ring{
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid #333;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 5px;
}
.wxParse-u {
  text-decoration: underline;
}
.WxEmojiView{
  align-items: center;
}
.wxEmoji{
  width: 16px;
  height:16px;
}
.wxParse-table{
  border-bottom:1px solid #e0e0e0;
}
.wxParse-tr{
	display: flex;
	border-right:1px solid #e0e0e0;
}
.wxParse-th,
.wxParse-td{
	flex:1;
	padding:5px;
	font-size:28rpx;
	word-break: break-all;
}
.wxParse-th-container,
.wxParse-td-container{
  border-left:1px solid #e0e0e0;
  border-top:1px solid #e0e0e0
}
.wxParse-td:last{
	border-top:1px solid #e0e0e0;
}
.wxParse-th{
	background:#f0f0f0;
}
.wxParse-del{
  display: inline;
}
.wxParse-figure {
  overflow: hidden;
}
.wxParse-ol-inner,.wxParse-ul-inner {
  display: flex;
  align-items: flex-start;
  line-height: 28px;
}
.wxParse-img-inner {
  position: relative;
}
.wxParse-img{
  background-color: #efefef;
  overflow: hidden;
  max-width: 100%;
  width: 100%;
  display: block;
}
.wxParse-img-fadein {
  animation: fade-in 1s linear;
}
.img-loading {
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -15px;
  margin-left: -15px;
  animation: loading 1s linear 0s infinite;
  width: 30px;
  height: 30px;
}

/* audio */
.wxParse-audio-inner {
  width: 100%;
  height: 200rpx;
}

/* hr */
.wxParse-hr {
  height: 0;
  margin: 15px 0;
  overflow: hidden;
  background: transparent;
  border: 0;
  border-bottom: 1px solid#EAECEF;
}

/* common */
.mr5 {
  margin-right: 5px;
}

.flex-full {
  flex: 1;
}

.overflow-hide {
  overflow: hidden;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes fade-in {
  0% { 
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
