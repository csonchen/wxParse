/**app.wxss**/
page {
  padding: 20px 10px;
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.flex,
.flex-column,
.flex-center-between,
.flex-center-xy,
.page {
  display: flex;
}
.flex-center,
.flex-center-between,
.flex-center-xy,
.page {
  justify-content: center;
}
.flex-between,
.flex-center-between {
  justify-content: space-between;
}
.flex-middle,
.flex-center-xy,
.page {
  align-items: center;
}
.flex-column {
  flex-direction: column;
}
.page {
  margin-top: -100px;
  min-height: 100vh;
  width: 100%;
}
.mb10 {
  margin-bottom: 10px;
}
.mb15 {
  margin-bottom: 15px;
}
.mb20 {
  margin-bottom: 20px;
}
.bold {
  font-weight: bold;
}
.font20 {
  font-size: 20px;
}
.normal-btn {
  min-width: 150px;
  padding: 0 10px;
  height: 42px;
  line-height: 42px;
  background: #0366d6;
  text-align: center;
  color: #fff;
  border-radius: 5px;
}
.sub-title {
  font-size: 16px;
  margin-bottom: 15px;
  margin-top: 15px;
  font-weight: bold;
}